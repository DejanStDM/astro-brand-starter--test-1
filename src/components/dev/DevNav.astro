---
// No frontmatter needed for static navbar
const { pathname } = Astro.url;
---

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img
                src="/favicon.svg"
                alt="Brand"
                width="30"
                height="30"
                class="d-inline-block align-text-top me-2"
            />
            Brand Starter
        </a>
        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class={`nav-link${pathname === '/' ? ' active' : ''}`} href="/">Home</a>
                </li>
                <li class="nav-item dropdown">
                    <a
                        class="nav-link dropdown-toggle"
                        href="#"
                        id="designDropdown"
                        role="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                    >
                        Design pages
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="designDropdown">
                        <li>
                            <a class={`dropdown-item${pathname === '/design/example-page' ? ' active' : ''}`} href="/design/example-page"
                                >Example Page</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a
                        class="nav-link dropdown-toggle"
                        href="#"
                        id="devDropdown"
                        role="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                    >
                        Dev pages
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="devDropdown">
                        <li>
                            <a class={`dropdown-item${pathname === '/dev/design-system/components-all' ? ' active' : ''}`} href="/dev/design-system/components-all"
                                >Components All</a>
                        </li>
                        <!-- Space -->
                        <li class="dropdown-divider"></li>
                        <li>
                            <a class={`dropdown-item${pathname === '/dev/design-system/buttons-page' ? ' active' : ''}`} href="/dev/design-system/buttons-page"
                                >Buttons</a>
                        </li>
                        <li>
                            <a class={`dropdown-item${pathname === '/dev/design-system/typography' ? ' active' : ''}`} href="/dev/design-system/typography"
                                >Typography</a>
                        </li>
                        <li>
                            <a class={`dropdown-item${pathname === '/dev/design-system/container' ? ' active' : ''}`} href="/dev/design-system/container"
                                >Container</a>
                        </li>
                        <li>
                            <a class={`dropdown-item${pathname === '/dev/design-system/tags' ? ' active' : ''}`} href="/dev/design-system/tags">Tags</a>
                        </li>
                       
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a
                        class="nav-link dropdown-toggle"
                        href="#"
                        id="devComponentsDropdown"
                        role="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                    >
                        Dev components
                    </a>
                    <ul
                        class="dropdown-menu"
                        aria-labelledby="devComponentsDropdown"
                    >
                        <li>
                            <a class={`dropdown-item${pathname === '/dev/components-pages/example-slider-page' ? ' active' : ''}`} href="/dev/components-pages/example-slider-page"
                                >Example Slider</a>
                        </li>
                        <li><a class={`dropdown-item${pathname === '/dev/components-pages/example-hero-page' ? ' active' : ''}`} href="/dev/components-pages/example-hero-page">Example Hero Section</a></li>
                        <li><a class={`dropdown-item${pathname === '/dev/components-pages/example-count-down-page' ? ' active' : ''}`} href="/dev/components-pages/example-count-down-page">Example Countdown</a></li>
                        <li><a class={`dropdown-item${pathname === '/dev/components-pages/example-accordion-page' ? ' active' : ''}`} href="/dev/components-pages/example-accordion-page">Example Accordion</a></li>
                        <li><a class={`dropdown-item${pathname === '/dev/components-pages/example-back-to-top-page' ? ' active' : ''}`} href="/dev/components-pages/example-back-to-top-page">Example Back to Top</a></li>
                        <li><a class={`dropdown-item${pathname === '/dev/components-pages/example-checkbox-page' ? ' active' : ''}`} href="/dev/components-pages/example-checkbox-page">Example Checkbox</a></li>
                        <li><a class={`dropdown-item${pathname === '/dev/components-pages/example-floating-labels-page' ? ' active' : ''}`} href="/dev/components-pages/example-floating-labels-page">Example Floating Labels</a></li>
                        <li><a class={`dropdown-item${pathname === '/dev/components-pages/example-modal-page' ? ' active' : ''}`} href="/dev/components-pages/example-modal-page">Example Modal</a></li>
                    </ul>
            </ul>
            </li>
        </div>
    </div>
</nav>
