  <div class="container">
    <div class="example-hero sec">
      <!-- Background Elements -->
      <div class="example-hero__background">
        <div class="example-hero__bg-shape example-hero__bg-shape--1"></div>
        <div class="example-hero__bg-shape example-hero__bg-shape--2"></div>
        <div class="example-hero__bg-shape example-hero__bg-shape--3"></div>
      </div>

      <!-- Main Content -->
      <div class="example-hero__content sec__content">
        <div class="example-hero__text-section">
          <div class="example-hero__badge">
