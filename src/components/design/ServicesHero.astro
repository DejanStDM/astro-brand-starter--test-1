---
// Services Hero Section Component
export interface Props {
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  image?: string;
  imageAlt?: string;
}

const { 
  title = "Comprehensive Solutions",
  titleHighlight = "for Your Business",
  subtitle = "Discover our full range of services designed to help your organization thrive and grow in today's digital landscape.",
  image = "/images/hero/vecteezy_3d-illustration-of-software-development_36584129.webp",
  imageAlt = "Comprehensive Solutions for Your Business"
} = Astro.props;
---

<section class="services-hero sec sec--padding-large">
  <div class="container">
    <div class="services-hero__content sec__content">
      
      <!-- Text Content -->
      <div class="services-hero__text-group">
        <div class="services-hero__text-content">
          <h1 class="services-hero__title sec__title">
            <span class="services-hero__title-line">{title}</span>
            <span class="services-hero__title-line services-hero__title-line--highlight">{titleHighlight}</span>
          </h1>
          
          <p class="services-hero__subtitle">
            {subtitle}
          </p>
          
          <div class="services-hero__actions">
            <a href="#services" class="btn btn-primary services-hero__btn">
              Explore Services
            </a>
            <a href="#contact" class="btn btn-secondary services-hero__btn">
              Get Quote
            </a>
          </div>
        </div>
      </div>
      
      <!-- Image Content -->
      <div class="services-hero__image-group">
        <img src={image} alt={imageAlt} class="services-hero__image" />
      </div>
      
    </div>
  </div>
</section>
