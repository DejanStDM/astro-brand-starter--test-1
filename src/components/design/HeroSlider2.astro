---
// ExampleHeroSlider.astro - Hero section with slider functionality
---

<section class="page-sec page-sec--hero-slider-2">
    <div class="container">
      <div class="hero-slider-2 sec">
        <div class="swiper hero-slider-2__swiper js__hero-slider-2">
          <div class="swiper-wrapper">
            
            <!-- Slide 1 -->
            <div class="swiper-slide">
              <div class="hero-slider-2__slide">
                <div class="hero-slider-2__content sec__content">
                  
                  <!-- Text Content -->
                  <div class="hero-slider-2__text-group">
                    <div class="hero-slider-2__text-content">
                      <h1 class="hero-slider-2__title sec__title">
                        <span class="hero-slider-2__title-line">Lessons and insights</span>
                        <span class="hero-slider-2__title-line hero-slider-2__title-line--highlight">from 8 years</span>
                      </h1>
                      
                      <p class="hero-slider-2__subtitle">
                        Where to grow your business as a photographer: site or social media?
                      </p>
                      
                      <div class="hero-slider-2__actions">
                        <button class="btn btn-primary hero-slider-2__btn hero-slider-2__btn--primary">
                          Register
                        </button>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Image Content -->
                  <div class="hero-slider-2__image-group">
                    <img src="/images/hero/slide1.webp" alt="Lessons and insights from 8 years" class="hero-slider-2__image" />
                  </div>
                  
                </div>
              </div>
            </div>
            
            <!-- Slide 2 -->
            <div class="swiper-slide">
              <div class="hero-slider-2__slide">
                <div class="hero-slider-2__content sec__content">
                  
                  <!-- Text Content -->
                  <div class="hero-slider-2__text-group">
                    <div class="hero-slider-2__text-content">
                      <h1 class="hero-slider-2__title sec__title">
                        <span class="hero-slider-2__title-line">Build and grow</span>
                        <span class="hero-slider-2__title-line hero-slider-2__title-line--highlight">your community</span>
                      </h1>
                      
                      <p class="hero-slider-2__subtitle">
                        Connect with like-minded people and expand your professional network.
                      </p>
                      
                      <div class="hero-slider-2__actions">
                        <button class="btn btn-primary hero-slider-2__btn hero-slider-2__btn--primary">
                          Register
                        </button>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Image Content -->
                  <div class="hero-slider-2__image-group">
                    <img src="/images/hero/slide2.webp" alt="Build and grow your community" class="hero-slider-2__image" />
                  </div>
                  
                </div>
              </div>
            </div>
            
            <!-- Slide 3 -->
            <div class="swiper-slide">
              <div class="hero-slider-2__slide">
                <div class="hero-slider-2__content sec__content">
                  
                  <!-- Text Content -->
                  <div class="hero-slider-2__text-group">
                    <div class="hero-slider-2__text-content">
                      <h1 class="hero-slider-2__title sec__title">
                        <span class="hero-slider-2__title-line">Achieve excellence</span>
                        <span class="hero-slider-2__title-line hero-slider-2__title-line--highlight">with dedication</span>
                      </h1>
                      
                      <p class="hero-slider-2__subtitle">
                        Transform your passion into success with our proven methodologies.
                      </p>
                      
                      <div class="hero-slider-2__actions">
                        <button class="btn btn-primary hero-slider-2__btn hero-slider-2__btn--primary">
                          Register
                        </button>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Image Content -->
                  <div class="hero-slider-2__image-group">
                    <img src="/images/hero/slide3.webp" alt="Achieve excellence with dedication" class="hero-slider-2__image" />
                  </div>
                  
                </div>
              </div>
            </div>
            
          </div>
          
            <!-- Navigation arrows
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div> -->
          
          <!-- Pagination dots -->
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </div>
  </section>