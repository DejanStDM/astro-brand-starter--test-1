---
// Achievements component - displays statistics and achievements
export interface Props {
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  achievements?: Achievement[];
}

export interface Achievement {
  icon: string;
  alt: string;
  number: string;
  label: string;
}

const { 
  title = "Helping a local",
  titleHighlight = "business reinvent itself",
  subtitle = "We reached here with our hard work and dedication",
  achievements = [
    {
      icon: "/images/achievements/Achievements-1.png",
      alt: "Members",
      number: "2,245,341",
      label: "Members"
    },
    {
      icon: "/images/achievements/Achievements-2.png",
      alt: "Clubs",
      number: "46,328",
      label: "Clubs"
    },
    {
      icon: "/images/achievements/Achievements-3.png",
      alt: "Event Bookings",
      number: "828,867",
      label: "Event Bookings"
    },
    {
      icon: "/images/achievements/Achievements-4.png",
      alt: "Payments",
      number: "1,926,436",
      label: "Payments"
    }
  ]
} = Astro.props;
---

<section class="achievements sec sec--padding-large sec--bg-silver">
  <div class="container">
    <div class="achievements__content sec__content">
      <div class="achievements__header">
        <h2 class="achievements__title sec__title">
          <span class="achievements__title-text">{title} </span>
          <span class="achievements__title-highlight">{titleHighlight}</span>
        </h2>
        <p class="achievements__subtitle">{subtitle}</p>
      </div>
      
      <div class="achievements__stats">
        {[0, 1].map((rowIndex) => (
          <div class="achievements__row">
            {[0, 1].map((colIndex) => {
              const achievementIndex = rowIndex * 2 + colIndex;
              const achievement = achievements[achievementIndex];
              return (
                <div class="achievements__stat">
                  <img src={achievement.icon} alt={achievement.alt} class="achievements__icon">
                  <div class="achievements__stat-text">
                    <div class="achievements__number">{achievement.number}</div>
                    <div class="achievements__label">{achievement.label}</div>
                  </div>
                </div>
              );
            })}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
