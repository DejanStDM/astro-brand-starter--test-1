---
// BlogPreview component - responsive slider showing blog cards
export interface Props {
  title?: string;
  subtitle?: string;
  blogs?: Array<{
    id: string;
    title: string;
    image: string;
    imageAlt: string;
  }>;
}

const { 
  title = "Caring is the new marketing",
  subtitle = "The Nexcent blog is the best place to read about the latest membership insights, trends and more. See who's joining the community, read about how our community are increasing their membership income and lot's more.â€‹",
  blogs = [
    {
      id: 'blog-1',
      title: 'Creating Streamlined Safeguarding Processes with OneRen',
      image: '/images/community-updates/community-update-1.png',
      imageAlt: 'Creating Streamlined Safeguarding Processes with OneRen'
    },
    {
      id: 'blog-2',
      title: 'What are your safeguarding responsibilities and how can you manage them?',
      image: '/images/community-updates/community-update-2.png',
      imageAlt: 'What are your safeguarding responsibilities and how can you manage them?'
    },
    {
      id: 'blog-3',
      title: 'Revamping the Membership Model with Triathlon Australia',
      image: '/images/community-updates/community-update-3.png',
      imageAlt: 'Revamping the Membership Model with Triathlon Australia'
    }
  ]
} = Astro.props;
---

<section class="blog-preview sec sec--padding-none">
  <div class="container">
    <div class="blog-preview__header sec__header">
      <h2 class="blog-preview__title sec__title">{title}</h2>
      <p class="blog-preview__subtitle sec__subtitle">{subtitle}</p>
    </div>
    
    <div class="blog-preview__content sec__content">
      <div class="swiper blog-preview__swiper js__blog-preview-slider">
        <div class="swiper-wrapper">
          {blogs.map((blog) => (
            <div class="swiper-slide">
              <div class="blog-preview__card">
                <img src={blog.image} alt={blog.imageAlt} class="blog-preview__image">
                <div class="blog-preview__card-content">
                  <h3 class="blog-preview__card-title">{blog.title}</h3>
                  <a href="#" class="blog-preview__card-link">
                    <span class="blog-preview__link-text">Readmore</span>
                    <svg class="blog-preview__link-icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"> <path d="M11.2503 11.0002L13.7201 8.53051C14.013 8.23761 14.013 7.76272 13.7201 7.46982L11.2503 5.00009M13.5004 8.00017L2.50012 8.00017" stroke="currentColor" stroke-width="1.1" stroke-linecap="round"></path> </svg>
                    {/* <img src="/icons/arrow-up-right-from-square-solid-full.svg" alt="Arrow" class="blog-preview__link-icon"> */}
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <!-- Navigation arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        
        <!-- Pagination dots -->
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</section>
