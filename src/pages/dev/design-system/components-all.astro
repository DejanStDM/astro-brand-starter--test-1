<style>
  .component-link {
    color: inherit;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    padding: 0.5rem;
    border-radius: 0.375rem;
    position: relative;
  }

  .component-link:hover {
    color: #045049;
    background-color: rgba(0, 247, 214, 0.233);
    transform: translateX(4px);
  }

  .component-link .icon {
    width: 16px;
    height: 16px;
    fill: currentColor;
    transition: transform 0.3s ease;
  }

  .component-link:hover .icon {
    transform: translate(2px, -2px);
  }

  .component-section {
    margin-bottom: 1rem;
    margin-top: 1.5rem;
  }

  .component-title {
    margin-bottom: 0;
    font-size: 1.5rem;
    font-weight: 600;
  }
</style>

